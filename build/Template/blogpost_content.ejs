<div class="content-inner-wraper">
    <header>
        <time class="content-stamp"><%= dateDescription%></time>
        <h1><%= title%></h1>
    </header>
    <%- articleContent%>
    <section class="content-readmore">
        <div class="content-readmore-item">
            <% var articleAddress = '../' + latterArticle.title + '/' + latterArticle.title + '.html'%>
            <span class="content-readmore-item-dim">最近的文章</span>
            <h2 class="post-title">
                <a href="<%= articleAddress %>" title="<%= '跳转至' + latterArticle.title%>">
                    <%= latterArticle.title%>
                </a>
            </h2>

            <p class="breviary">
                <%= latterArticle.brev%>
            </p>
            <time class="content-stamp"><%= latterArticle.dateDescription%></time>
            <a class="round-border-btn" href="<%= articleAddress %>">继续阅读</a>
        </div>
        <div class="content-readmore-item">
            <% var articleAddress = '../' + formerArticle.title + '/' + formerArticle.title + '.html' %>
            <span class="content-readmore-item-dim">更早的文章</span>
            <h2 class="post-title">
                <a href="<%= articleAddress%>" title="<%= '跳转至' + formerArticle.title;%>">
                    <%= formerArticle.title%>
                </a>
            </h2>

            <p class="breviary">
                <%= formerArticle.brev%>
            </p>
            <time class="content-stamp"><%= formerArticle.dateDescription%></time>
            <a class="round-border-btn" href="<% articleAddress %>">继续阅读</a>
        </div>
    </section>
</div>